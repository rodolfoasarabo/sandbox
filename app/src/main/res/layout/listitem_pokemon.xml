<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/lblNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/lblNomeValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pikachu"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@id/lblNome"
            app:layout_constraintTop_toTopOf="@id/lblNome"
            />

        <TextView
            android:id="@+id/lblTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: "
            app:layout_constraintTop_toBottomOf="@id/lblNome"
            app:layout_constraintStart_toStartOf="@id/lblNome"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblTipoValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Fogo"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@id/lblTipo"
            app:layout_constraintTop_toTopOf="@id/lblTipo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:id="@+id/lblSexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo: "
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/lblNome"
            app:layout_constraintStart_toEndOf="@id/lblNomeValor"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblSexoValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Masculino"
            android:textColor="#000"
            app:layout_constraintStart_toEndOf="@id/lblSexo"
            app:layout_constraintTop_toTopOf="@id/lblSexo"
            />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:alpha="0.12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</android.support.constraint.ConstraintLayout>